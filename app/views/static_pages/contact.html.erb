<div class="container">
	<div class="row">
		<div class="col-md-4">
			<h1>Contact</h1>
			<h3>Email</h3>
			<span class="glyphicon glyphicon-envelope"></span>
			<a id="email" href="mailto:ashortsleeves@gmail.com">ashortsleeves@gmail.com</a>
			<h3>Phone</h3>
			<span class="glyphicon glyphicon-earphone"></span>
			<a>(508) 974-3434</a>
			<h3>GitHub</h3>
			<span class="glyphicon glyphicon-console"></span>
			<a href="https://github.com/ashortsleeves">ashortsleeves</a>
		</div>


		<%= flash[:notice] %>
		<div class="col-md-8">
		<h1>Say Hello...</h1>
			<%= form_tag("/static_pages/thank_you") do %>
			<div class="row">
			  <div class="col-md-4">
			    <div class="form-group">
			      <%= label_tag :name %>
			      <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
			    </div>      
			    <div class="form-group">
			      <%= label_tag :email, "Email Address" %>
			      <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
			    </div>
			    <div class="form-group">
			      <%= label_tag :message %>
			      <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
			    </div>      
			  </div>
			</div>
			<%= submit_tag "Send" %>   
			<% end %>
		</div>
	</div>
</div>